<p id="notice"><%= notice %></p>

<h1>Listing Messages for User</h1>

<table>
  <thead>
    <tr>
      <th>Sender</th>
      <th>Reciever</th>
      <th>Content</th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.sender %></td>
        <td><%= message.reciever %></td>
        <td><%= message.content %></td>
        <td><%= link_to 'Show', message %> <%= link_to 'Edit', edit_message_path(message) %> 
        <%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', new_user_message_path %>
